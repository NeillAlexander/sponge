<assembly>
  <baseDirectory>sponge</baseDirectory>
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>src/main/bin</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/</directory>
      <outputDirectory>sessions</outputDirectory>
      <excludes>
        <exclude>**/*</exclude>
      </excludes>
    </fileSet>
  </fileSets>
  <binaries>
    <dependencySets>
      <dependencySet>
        <outputDirectory>lib</outputDirectory>
      </dependencySet>
    </dependencySets>
  </binaries>
</assembly>