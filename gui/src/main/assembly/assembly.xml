<assembly>
  <baseDirectory>sponge</baseDirectory>
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>${project.build.finalName}.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/bin</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
  </fileSets>
  <binaries>
    <dependencySets>
      <dependencySet>
        <outputDirectory>lib</outputDirectory>
      </dependencySet>
    </dependencySets>
  </binaries>
</assembly>